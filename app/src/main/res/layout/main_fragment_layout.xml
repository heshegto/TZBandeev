<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.TZBandeev">


    <LinearLayout
        android:id="@+id/search_and_filter"
        android:layout_width="@dimen/active_element_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/search"
            style="@style/App.ActiveElement.EditText"
            android:layout_width="264dp"
            android:layout_height="56dp"
            android:hint="@string/search_courses" />

        <ImageButton
            android:id="@+id/filter"
            style="@style/App.ActiveElement.ImageButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/light_grey"
            android:src="@drawable/bookmark" />
    </LinearLayout>


    <TextView
        android:id="@+id/sort"
        style="@style/App.TextView.MediumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/sort_by_date"
        android:textColor="@color/green"
        app:drawableEndCompat="@drawable/arrow_right_short_fill"
        app:layout_constraintEnd_toEndOf="@id/search_and_filter"
        app:layout_constraintTop_toBottomOf="@id/search_and_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sort" />
</androidx.constraintlayout.widget.ConstraintLayout>