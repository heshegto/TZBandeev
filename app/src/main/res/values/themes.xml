<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.TZBandeev" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/almost_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_grey</item>
        <item name="colorOnSecondary">@color/light_grey_text</item>
        <!-- Surface colors. -->
        <item name="colorSurface">@color/dark_grey</item>
        <item name="colorSurfaceVariant">@color/light_grey</item>
        <!-- Surface text colors. -->
        <item name="colorOnSurface">@color/almost_white</item>
        <item name="colorOnSurfaceVariant">@color/green</item>
        <!-- Font -->
        <item name="fontFamily">@font/roboto</item>
        <!-- Status bar and background color. -->
        <item name="android:colorBackground">@color/almost_black</item>
        <item name="android:statusBarColor">@color/almost_black</item>

    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/light_grey</item>
        <item name="android:height">32dp</item>
        <item name="android:width">64dp</item>
    </style>


</resources>